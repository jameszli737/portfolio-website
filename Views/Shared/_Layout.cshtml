<!DOCTYPE html>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined"
      rel="stylesheet">

<style>
    div.gallery {
        margin: 5px;
        border: 1px solid #ccc;
        float: inline-start;
        width: 400px;
    }

    div.gallery:hover {
            border: 1px solid #777;
    }

    div.gallery img {
            width: 100%;
            height: auto;
    }

    div.desc {
        padding: 15px;
        text-align: center;
    }
    
    video {
        height: auto;
        width: 100%
    }
    
    img {
        max-width: 70%;
        height: auto;
    }

    .navbar__link {
        display: flex;
        align-items: center;
        color: #ffffff;
        padding: 12px;
        text-decoration: none;
        font-weight: bold;
        font-size: 0.85rem;
    }

    .navbar__link .material-icons-outlined {
        margin-right: 6px;
    }

</style>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <!--This is the code for the navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">

            <!--This is the code for the "hamburger menu" button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!--This is the link to the home page - you can leave this as is -->
            <a asp-controller="Home" asp-action="Index" class="navbar-brand">Home</a>

            <!--everything in this section will collapse when the screen is small -->
            <div class="collapse navbar-collapse" id="nav-content">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="About" class="navbar__link">
                            <span class="fas fa-user"></span>
                            <span class="material-icons-outlined">perm_identity</span>
                            &nbsp;About Me
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Projects" class="navbar__link">
                            <span class="fas fa-user"></span>
                            <span class="material-icons-outlined">work_outline</span>
                            &nbsp;Projects
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="FunFacts" class="navbar__link">
                            <span class="fas fa-user"></span>
                            <span class="material-icons-outlined">celebration</span>
                            &nbsp;Fun Facts
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Designs" class="navbar__link">
                            <span class="fas fa-user"></span>
                            <span class="material-icons-outlined">palette</span>
                            &nbsp;Designs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Spotify" class="navbar__link">
                            <span class="fas fa-user"></span>
                            <span class="material-icons-outlined">headset</span>
                            &nbsp;Spotify
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Resume" class="navbar__link">
                            <span class="fas fa-user"></span>
                            <span class="material-icons-outlined">article</span>
                            &nbsp;Resume
                        </a>
                    </li>
                </ul>
                </div>


            </div>
    </nav>


    <!--this is the main content section of the website -->
    <div class="container">
        <!--NOTE: This is where the code from the main view is inserted -->
        @RenderBody()
    </div>

    <!--This code references different script libraries to make your page responsive -->
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>